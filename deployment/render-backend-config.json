{
  "name": "medical-records-backend",
  "env": "go",
  "region": "oregon",
  "plan": "free",
  "buildCommand": "cd backend && go mod download && go build -o ../bin/server ./cmd/server",
  "startCommand": "./bin/server",
  "healthCheckPath": "/health",
  "envVars": {
    "DB_SSLMODE": "require",
    "SERVER_PORT": "8080",
    "JWT_EXPIRATION_HOURS": "24",
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  }
}

